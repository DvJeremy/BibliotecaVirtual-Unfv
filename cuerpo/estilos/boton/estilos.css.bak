
.contenedor {
	width: 200px;
	height: 0px;
	margin: auto;
	padding: 20px 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.contenedor-botones {
	
	width: 150px;
	height: 100px;
	display: grid;
	grid-template-columns: repeat(1, 5fr);
	gap: 100px;
}

.boton {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 50px;
	background: #141414;
	color: #fff;
	font-family: sans-serif;
	font-size: 15px;
	font-weight: 500;
	border: none;
	cursor: pointer;
	text-transform: uppercase;
	transition: .3s ease all;
	border-radius: 5px;
	position: relative;
	overflow: hidden;
}

.boton span {
	position: relative;
	z-index: 2;
	transition: .3s ease all;
}